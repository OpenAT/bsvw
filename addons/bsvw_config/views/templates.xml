<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- CUSTOM BOOTSTRAP THEME FOR BSVW -->
    <!-- HINT: http://getbootstrap.com/customize -->
    <template id="bsvw_theme_option" inherit_id="website.themes" name="bsvw theme option">
        <xpath expr='//div[@id="themes-list"]' position="inside">
            <div class="col-md-4">
                <div class="well text-center">
                    <div class="image">
                        <img class="img-responsive" src="/bsvw_config/static/src/img/bsvw_theme_thumbnail.png"
                             alt="BSVW"/>
                    </div>
                    <div class="options">
                        <h3>BSVW</h3>
                        <p>Blinden- und Sehbehindertenverband</p>
                        <a class="btn btn-info" href="/website/theme_change?theme_id=website.theme_bsvw">Apply</a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
    <!-- load bsvw theme css and js -->
    <template id="website.theme_bsvw" name="BSVW" inherit_id="website.theme" active="False" customize_show="True">
        <xpath expr="//link[@id='bootstrap_css']" position="replace">
            <link rel='stylesheet' href='/bsvw_config/static/src/css/bootstrap_bsvw/css/bootstrap.min.css' t-ignore="true"/>
            <link rel='stylesheet' href='/bsvw_config/static/src/css/bootstrap_bsvw/css/bootstrap-theme.min.css' t-ignore="true"/>
            <link rel='stylesheet' href='/bsvw_config/static/src/css/bsvw.css' t-ignore="true"/>
        </xpath>
    </template>

